{% if cart.item_count > 0 %}
  <h1>cart</h1>
  <form action="/cart" method="post" novalidate>
    <table>
      <thead>
        <th colspan="2">Prod</th>
        <th>Price</th>
        <th>Qty</th>
        <th>total</th>
      </thead>
      <tbody>
        {% for item in cart.items %}
          <tr>
            <td>
              <a href="{{ item.url | within: collections.all }}">
                <img src="{{ item | img_url: 'medium' }}" alt="{{ item.title | escape }}">
              </a>
            </td>
            <td>
              <a href="{{ item.url }}">{{ item.product.title }}</a>
              {{ item.variant.title }}
              Index: {{ item.properties[0].first}}
              <a href="/cart/change?line={{ forloop.index }}&amp;quantity=0">remove</a>
            </td>
            <td>{{ item.price | money }}</td>
            <td>
              <input type="number" name="updates[]" id="updates_{{ item.key }}" value="{{ item.quantity }}" min="0">
            </td>
            <td>
              {% if item.original_line_price != item.line_price %}{{ item.original_line_price | money }}{% endif %}
              {{ item.line_price | money }}
              {% for discount in item.discounts %}{{ discount.title }}{% endfor %}
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
    <div>
      <p>sub total : {{ cart.total_price | money }}</p>
      <button type="submit" name="update">Update</button>
      <button type="submit" name="checkout">Checkout</button>
    </div>
    <div>
    {% comment %} Label and checkbox for instructions {% endcomment %}
      <label for="CartNote">Add instructions</label>
      <input type="checkbox" id="checkbox" name="Add-Instructions" onclick="clickedCheckbox(event)">
    </div>
    <div>
      {% comment %} textfield appears when checkbox is checked  {% endcomment %}
      <textarea name="note" id="CartNote">{{ cart.note }}</textarea>
    </div>
  </form>
{% else %}
  <h2>cart</h2>
  Cart is empty
{% endif %}

<script>
  console.log({{ cart.items | json }});
  // get checkbox
  const checkbox = document.getElementById("checkbox")
  // get text area
  const note = document.getElementById("CartNote");
  //set checkbox and text area based on cart note value
  note.hidden = note.value == "";
  checkbox.checked = note.value != "";

  // hide/show text area when checkbox is clicked
  function clickedCheckbox(event) {
    note.toggleAttribute("hidden");
    //empty text area when unchecked
    if(note.hidden) note.value = "";
  }

</script>
