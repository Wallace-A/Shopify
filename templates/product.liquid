{% assign current_variant = product.selected_or_first_available_variant %}
{% assign featured_image = current_variant.featured_image | default: product.featured_image %}
<img src="{{ featured_image | img_url: 'large' }}" alt="{{ featured_image.alt | escape }}" id="ProductPhotoImg">
{% for image in product.images %}
  <a href="{{ image.src | img_url: 'large' }}">
    <img src="{{ image.src | img_url: 'compact' }}" alt="{{ image.alt | escape }}">
  </a>
{% endfor %}
<h1>{{ product.title }}</h1>
<form action="/cart/add" method="post" enctype="multipart/form-data" id="AddToCartForm">
  <select name="id" id="productSelect">
    {% for variant in product.variants %}
      {% if variant.available %}
        <option value="{{ variant.id }}">
          {{ variant.title }} - {{ variant.price | money_with_currency }}
        </option>
      {% else %}
        <option disabled="disabled">
          {{ variant.title }} - sold out
        </option>
      {% endif %}
    {% endfor %}
  </select>
  {{ current_variant.price | money }}
  <label for="Quantity">quantity</label>
  <input type="number" id="Quantity" name="quantity" value="1" min="1">

  {% comment %} set style variable for addToCart button {% endcomment %}
  {% if current_variant.available %}
    {% comment %} set style to available {% endcomment %}
    {% assign buttonStyle="addToCart-available" %}
    {% assign buttonDisabled = "" %}

  {% else %}
    {% comment %} set style to unavailable {% endcomment %}
      {% assign buttonStyle="addToCart-unavailable" %}
      {% assign buttonDisabled = "disabled" %}
  {% endif %}

  <button type="submit" class={{ buttonStyle }}  name="add" id="AddToCart" onclick="addItemToCart('AddToCartForm'); return false;" {{ buttonDisabled }} >Add to cart</button>

</form>
<div>{{ product.description }}</div>
{% comment %} modal {% endcomment %} 

<div class="modal" id="product-modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {% comment %} disaply info about current product {% endcomment %}
        <h5 class="modal-title">Current Product</h5>
        <p>I am a current product</p>
        {% comment %} disaply info about cart{% endcomment %}
        <h5 class="modal-title">Cart</h5>
        <p>I am a cart item</p>
        {% comment %} display total quantity/price {% endcomment %}
        <h5 class="modal-title">Total</h5>
        <p>Total of things</p>
      </div>
      <div class="modal-footer">
      </div>
    </div>
  </div>
</div>

<script>
//open modal on load
$(window).on('load', function() {
        $('#product-modal').modal('show');
});

//get add item button
const addItemButton = document.getElementById("AddToCart");

function addItemToCart(event) {
  console.log("adding to cart");
  console.log({{current_variant.inventory_quantity}});
  // ajax request
  jQuery.post('/cart/add.js', {
    items: [
    {
      // get quantity from input
      quantity: parseInt($("#Quantity").val()),
      id: {{ product.selected_or_first_available_variant.id }},
      // puts each set of items into next position on cart, instead of one
      properties: { "cart_index": {{ cart.item_count }} }
      }
    ]
  })
}


</script>